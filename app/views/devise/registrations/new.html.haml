%h2 Sign up

.row
  .col-md-8
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!

      .form-group
        = f.text_field :name, autofocus: true, class: 'form-control', placeholder: "Enter name"

      .form-group
        = f.email_field :email, class: 'form-control', placeholder: "Enter email"

      .form-group
        = f.password_field :password, class: 'form-control', autocomplete: "off", placeholder: "Enter password (#{@minimum_password_length} characters minimum)"

      .form-group
        = f.password_field :password_confirmation, class: 'form-control', autocomplete: "off", placeholder: "Enter password confirmation"

      .form-group
        = f.submit "Sign up", class: 'btn btn-success'

      .form-group
        = render "devise/shared/links"
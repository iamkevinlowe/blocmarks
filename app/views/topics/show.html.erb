<h1 class="text-center text-capitalize"><%= @topic.title %></h1>

<div class="row">
  <div class="col-md-8">
    <%= render partial: 'bookmarks/bookmark', collection: @topic.bookmarks %>
  </div>
  <div class="col-md-4">
    <%= render partial: 'bookmarks/form', locals: { bookmark: @bookmark } %>
  </div>
</div>

<script>
  var blocmetrics = {
    report: function(event_name) {
      var _bm_event = {
        name: event_name
      };

      var _bm_request = new XMLHttpRequest();
      _bm_request.open("POST", "http://localhost:3000/api/events", true);
      _bm_request.setRequestHeader('Content-Type', 'application/json');
      _bm_request.onreadystatechange = function () {
      };
      _bm_request.send(JSON.stringify(_bm_event));
    }
  };
  
  blocmetrics.report("Topic show page");
</script>
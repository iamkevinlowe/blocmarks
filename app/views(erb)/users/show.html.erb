<h1 class="text-center">My Blocmarks</h1>

<div class="row">
  <div class="col-md-12">
    <%= render partial: 'topics/topic', collection: @topics %>
  </div>
  <div class="col-md-12">
    <%= will_paginate @topics %>
  </div>
</div>

<h1 class="text-center">Liked Blocmarks</h1>

<div class="row">
  <div class="col-md-12">
    <%= render partial: 'bookmarks/bookmark', collection: @liked_bookmarks %>
  </div>
  <div class="col-md-12">
    <%= will_paginate @liked_bookmarks %>
  </div>
</div>